{
  "name": "start_nutrition_journey",
  "description": "Start your personalized nutrition journey with LoopGPT. Set your goals (weight loss, muscle gain, or maintenance), specify dietary preferences, and get a customized meal plan with calorie targets and macro distribution. This is the first step in your adaptive nutrition coaching experience.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "chatgpt_user_id": {
        "type": "string",
        "description": "Unique identifier for the ChatGPT user"
      },
      "goal": {
        "type": "string",
        "enum": ["weight_loss", "muscle_gain", "maintenance"],
        "description": "Primary nutrition goal"
      },
      "current_weight_kg": {
        "type": "number",
        "description": "Current weight in kilograms"
      },
      "target_weight_kg": {
        "type": "number",
        "description": "Target weight in kilograms"
      },
      "height_cm": {
        "type": "number",
        "description": "Height in centimeters"
      },
      "age": {
        "type": "integer",
        "description": "Age in years"
      },
      "gender": {
        "type": "string",
        "enum": ["male", "female", "other"],
        "description": "Gender for calorie calculation"
      },
      "activity_level": {
        "type": "string",
        "enum": ["sedentary", "lightly_active", "moderately_active", "very_active", "extremely_active"],
        "description": "Physical activity level"
      },
      "dietary_preferences": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["vegan", "vegetarian", "keto", "paleo", "gluten_free", "dairy_free", "halal", "kosher"]
        },
        "description": "Dietary restrictions or preferences (optional)"
      },
      "timeline_weeks": {
        "type": "integer",
        "description": "Target timeline in weeks (optional, default: 12)"
      }
    },
    "required": ["chatgpt_user_id", "goal", "current_weight_kg", "target_weight_kg", "height_cm", "age", "gender", "activity_level"]
  },
