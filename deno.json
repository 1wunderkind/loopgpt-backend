{
  "tasks": {
    "test": "deno test --allow-all --no-check",
    "test:unit": "deno test --allow-all --no-check tests/unit/",
    "test:integration": "deno test --allow-all --no-check tests/integration/",
    "test:e2e": "deno test --allow-all --no-check tests/e2e/",
    "test:performance": "deno test --allow-all --no-check tests/performance/",
    "test:security": "deno test --allow-all --no-check tests/security/",
    "test:coverage": "deno test --allow-all --no-check --coverage=coverage/",
    "test:watch": "deno test --allow-all --no-check --watch",
    "coverage": "deno coverage coverage/ --lcov --output=coverage/lcov.info"
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "@std/assert": "https://deno.land/std@0.208.0/assert/mod.ts",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.0"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"]
  }
}
